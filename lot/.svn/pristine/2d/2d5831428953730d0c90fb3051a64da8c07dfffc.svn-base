@import "./function.scss";

.home {
  width: 100%;
  overflow: hidden;
  background-color: #fff9ee;
}

.logo {
  height: 70px;
  background-image: url("../img/logo.png");
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 130px;
  box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.25);
  border-radius: 5px;
  background-color: $bg_color;
  position: relative;
  z-index: 98;
  cursor: pointer;
  h1 {
    text-indent: -99999999999999999999em;
  }
}

.html_rig {
  margin: 0 auto;
  width: 1200px;
  min-width: 1200px;
  overflow: hidden;
}

.rigth_content {
  background-color: #fff;
  width: 920px;
  min-height: 970px;
  border-radius: 5px;
  margin-left: 270px;
  overflow: hidden;
}

.default_left {
  overflow: hidden;
  width: 260px;
  color: #fff;
  border-radius: 5px;
  position: fixed;
  padding-top: 5px;
}

.def-l-t {
  padding-top: 10px;
  margin-top: -10px;
  height: 75px;
  font-size: 18px;
  padding-left: 10px;
  line-height: 65px;
  background-image: url("../img/icon.png");
  background-repeat: no-repeat;
  background-size: 65px;
  background-position: 18px 16px;
  background-color: $bg_color;
  position: relative;
  z-index: 98;
  cursor: pointer;
  .pk-jia {
    margin-right: 10px;
  }
}

.nuv {
  height: 610px;
  width: 290px;
  background: $bg_color2;
  overflow: auto;
  padding-bottom: 75px;
}

.nuv > li {
  cursor: pointer;
  padding-bottom: 13px;
}

.li-bot {
  margin-bottom: 0 !important;
}

.img-font {
  min-height: 40px;
  line-height: 40px;
  padding-left: 78px;
  padding-right: 46px;
  text-align: left;
  font-size: 18px;
  position: relative;
  background-repeat: no-repeat;
  .nuv-icon-dow {
    position: absolute;
    left: 220px;
    color: #fff;
  }
  .lotteryIcon {
    position: absolute;
    top: 5px;
    left: 32px;
    width: 30px;
  }
}

.nuv > li:nth-child(1) .img-font {
  background-image: url("../img/icon.png");
  background-repeat: no-repeat;
  background-size: 80px;
  background-position: 10px -137px;
}

.nuv > li:nth-child(2) .img-font {
  background-image: url("../img/icon.png");
  background-size: 80px;
  background-repeat: no-repeat;
  background-position: 10px -247px;
}

.img-font:hover {
  color: rgba(0, 0, 0, 0.7);
}

.img-font-click {
  color: rgba(0, 0, 0, 0.7);
}

.nuv-ul-s {
  height: 0;
  display: none;
  opacity: 0;
  text-align: left;
  font-size: 14px;
  overflow: hidden;
}

.iconfont {
  color: $icon_color;
}

.nuv-ul-s-list {
  padding-left: 98px;
  height: 40px;
  line-height: 40px;
  border-left: 3px solid transparent;
  border-radius: 2px;
  .icon-heart {
    border: none;
    position: absolute;
    top: 14px;
    left: 200px;
    width: 16px;
    height: 16px;
    background-image: url(../img/hot.png);
    background-repeat: no-repeat;
    background-size: 25px;
    background-position-x: -3px;
  }
  .xin1 {
    background-position-y: -24px;
  }
  .xin {
    background-position-y: -39px;
  }
  .icon-new {
    position: absolute;
    left: 70px;
    top: 5px;
    width: 29px;
    height: 27px;
    background-size: 29px;
    background-image: url(../img/hot.png);
    background-repeat: no-repeat;
  }
  .icon-weihu {
    position: absolute;
    left: 40px;
    top: 6px;
    width: 29px;
    height: 27px;
    background-size: 25px;
    background-image: url(../img/menu_weihu.png);
    background-repeat: no-repeat;
  }
}

.weihu {
  position: absolute;
  width: 100%;
  height: 100%;
  padding-left: 15px;
  line-height: 38px;
  top: 0;
  left: 0;
  z-index: 98;
}

.nuv-ul-s-list:hover {
  background-color: rgba(255, 255, 255, 0.2);
  border-left-color: #fe0c3f;
}

.nuv-ul-s-list-click {
  background-color: rgba(255, 255, 255, 0.2);
  border-left-color: #fe0c3f;
}
