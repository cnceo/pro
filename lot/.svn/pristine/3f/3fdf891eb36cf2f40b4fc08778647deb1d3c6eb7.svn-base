@import "./function.scss";

.bet {
  position: relative;
  .pk_bet {
    visibility: visible; /*hidden;*/
    position: fixed;
    left: 0px;
    top: 0px;
    z-index: 100;
    background: gray;
    zoom: 1;
    filter: alpha(opacity=80);
    opacity: 0.5;
    width: 100%;
    height: 100%;
  }
