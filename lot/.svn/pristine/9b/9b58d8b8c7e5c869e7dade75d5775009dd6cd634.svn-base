            lineId: lineId,
            userName: userName,
            status: status,
            startTime: startTime,
            endTime: endTime,
            pageNum: pagenum,
            page: page
        };
        $.pjax({
            data: params,
            method: 'get',
            url: '/user/problem',
            container: '#container'
        });
    }
   
