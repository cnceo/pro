    //更改状态
    function updateState(id,line_id){
        var params = {
            Id: id,
            Line_id:line_id
        };
        $.pjax({
            data: params,
            method: 'post',
            url: '/user/updatestate',
            container: '#container'
        });
    }
    
    function updateState(id,line_id){
       if( id == '' || line_id == ''){
            layer.alert('参数错误！',{icon:2});
            return;
        }
        var url,data,callback;
        url = 'updatestate';
        data = 'Id='+id+'&&Line_id='+line_id;
        
        layer.confirm('确定要将状态改为已处理吗？', {
          btn: ['确定','取消'] //按钮
        }, function(){
            //确定
            callback = function(res){
                if (res.ErrorCode == 2) {
                    layer.alert(res.ErrorMsg, {icon: 2});
                    layer.close(index);
                } else if (res.ErrorCode == 1) {
                    layer.alert(res.ErrorMsg, {icon: 1},function(){window.location.reload();});
                }
            };

          doajax(url,data,callback);
        }, function(){
          //取消
          return;
        });
 
    }
    
    
    function doajax(url,data,callback){
         $.ajax({
            type: "post",
            url: url,
            data: data,
            beforeSend: function () {
                index = layer.load(1, {
                    shade: [0.5, '#000000'] //0.1透明度的白色背景
                });
            },
            error: function () {
                layer.alert('参数错误！', {icon: 2});
                layer.close(index);
            },
            dataType: 'json',
            success: function (res) {
               callback(res);
            }
        });
    }
